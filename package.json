    "start": "react-scripts start",
    "build": "react-scripts build",
    "prettier:run": "prettier -c src/**/*.js src/**/*.css",
    "prettier:fix": "prettier --write src/**/*.js src/**/*.css",
    "eslint:run": "eslint src/**/*.js",
    "eslint:fix": "eslint src/**/*.js --fix",
    "stylelint:run": "stylelint src/**/*.css",
    "stylelint:fix": "stylelint src/**/*.css --fix",
    "lint": "npm run eslint:run -- --max-warnings=0 && npm run stylelint:run -- --max-warnings=0",
    "unit-test": "react-scripts test --env=jsdom",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
